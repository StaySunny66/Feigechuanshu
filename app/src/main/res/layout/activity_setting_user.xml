<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wx_back"
    tools:context=".startui.SettingUserActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="完善个人信息"
        android:textColor="@color/wx_black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="用户UUID"
        android:textColor="@color/wx_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="昵称"
        android:textColor="@color/wx_black"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="个性签名"
        android:textColor="@color/wx_black"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


    <EditText
        android:id="@+id/settinguuid"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:editable="false"
        android:paddingLeft="5dp"

        android:focusable="false"
        android:background="@drawable/yuanjiaomessage"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/wx_galary"
        android:theme="@style/SettingfEditView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="Deprecated" />


    <EditText
        android:id="@+id/settingname"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="5dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/yuanjiaomessage"
        android:layout_height="40dp"
        android:theme="@style/SettingfEditView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/settingkey"
        android:layout_width="0dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/yuanjiaomessage"
        android:layout_height="40dp"
        android:theme="@style/SettingfEditView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/usernext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="完成"
        android:textColor="@color/wx_black"
        android:theme="@style/SettingButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="注：UUID由系统根据AndroidID自动生成,\n不可修改且为APP用户唯一标识"
        android:textColor="@color/wx_galary"
        app:layout_constraintStart_toStartOf="@+id/settingkey"
        app:layout_constraintTop_toBottomOf="@+id/settingkey" />
</androidx.constraintlayout.widget.ConstraintLayout>